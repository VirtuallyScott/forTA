{
  "name": "Ubuntu Python Linuxbrew DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "remoteUser": "vscode",
  "mounts": [
    {
      "source": "${env:USERPROFILE}\OneDrive\.ssh",
      "target": "/home/vscode/.ssh",
      "type": "bind",
      "when": {
        "platform": "win32"
      }
    },
    {
      "source": "${env:USERPROFILE}\OneDrive\SRC",
      "target": "/SRC",
      "type": "bind",
      "when": {
        "platform": "win32"
      },
      {
        "source": "${env:USERPROFILE}\OneDrive\.gitconfig",
        "target": "/home/vscode/.gitconfig",
        "type": "bind",
        "when": {
          "platform": "win32"
        }
    }
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode-remote.remote-containers",
    "ms-vscode.cpptools",
    "github.vscode-pull-request-github"
  ],
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.ssh && chmod 700 /home/vscode/.ssh"
}
